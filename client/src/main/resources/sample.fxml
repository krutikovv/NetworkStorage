<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <HBox fx:id="authPanel">
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login"/>
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password" onAction="#tryToAuth"/>
        <Button text="login" onAction="#tryToAuth" minWidth="100"/>
        <Button text="reg" onAction="#registration" minWidth="80"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <ListView fx:id="clientList" visible="false" managed="false" minWidth="600"
        onMouseReleased="#clientListClicked"/>
        <ListView fx:id="serverList" visible="true" managed="false" minWidth="600"
        onMouseReleased="#serverListClicked"/>
<!--        <TextArea fx:id="textArea" HBox.hgrow="ALWAYS" editable="false"/>-->
    </HBox>

    <HBox fx:id="controlPanel" visible="false">
        <Button text="back" onAction="#backFileDir" minWidth="100"/>
        <Button text="copy" onAction="#copyFileDir" minWidth="100"/>
        <Button text="create" onAction="#createDir" minWidth="100"/>
     </HBox>

    <HBox fx:id="msgPanel" visible="false" managed="false">
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="input message" onAction="#sendMsg"/>
        <Button text="close" onAction="#sendMsg"/>
    </HBox>

</VBox>